{
  "name": "@pulsemarkets/root",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/aufacicenta/pulsemarkets-v2-web.git"
  },
  "scripts": {
    "prepare": "husky install",
    "stylelint": "stylelint"
  },
  "dependencies": {
    "web3": "^1.7.1"
  },
  "devDependencies": {
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.1.2",
    "node-sass": "^9.0.0",
    "prettier": "^2.4.1",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-recommended": "^9.0.0",
    "stylelint-order": "^6.0.1",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.3.0",
    "typed-scss-modules": "^4.1.1",
    "typescript": "^5.1.6",
    "eslint": "^7.22.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-jest-dom": "^3.8.1",
    "eslint-plugin-jest-formatting": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.2",
    "eslint-plugin-unicorn": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0"
  },
  "lint-staged": {
    "./app/{src,cypress,storybook,scripts}/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --list-different --write"
    ],
    "./**/*.{json,scss}": [
      "prettier --list-different --write"
    ],
    "./app/src/**/*.module.scss": [
      "stylelint --config ./app/.stylelintrc --fix",
      "tsm --ignore 'src/theme/*.scss' --exportType default --nameFormat none --implementation node-sass --aliasPrefixes./src src",
      "prettier --list-different --write",
      "git add **/*.module.scss.d.ts"
    ]
  }
}
